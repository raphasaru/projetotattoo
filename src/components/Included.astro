---
const mainFeatures = [
  {
    icon: "clock",
    title: "40 horas de imersão presencial",
    description: "Aulas práticas intensivas com acompanhamento individual"
  },
  {
    icon: "users",
    title: "4 tatuagens em voluntários reais",
    description: "Pratique em pessoas de verdade, não só pele sintética"
  },
  {
    icon: "kit",
    title: "Kit de materiais para prática",
    description: "Tudo que você precisa incluído, sem custos extras"
  },
  {
    icon: "certificate",
    title: "Certificado de conclusão",
    description: "Documento reconhecido com 12 anos de tradição"
  },
  {
    icon: "community",
    title: "Acesso vitalício à comunidade",
    description: "Mais de 5.000 tatuadores trocando experiências"
  },
  {
    icon: "live",
    title: "Lives mensais exclusivas",
    description: "Conteúdo atualizado e tira-dúvidas com especialistas"
  }
];

const bonuses = [
  {
    title: "Curso de Colorimetria",
    value: "R$ 497",
    description: "Domine as cores e combinações"
  },
  {
    title: "Curso de Fotografia para Tatuadores",
    value: "R$ 297",
    description: "Fotografe seus trabalhos profissionalmente"
  }
];
---

<section class="included-section section">
  <div class="container">
    <div class="included-header">
      <span class="section-label">O que você recebe</span>
      <h2 class="included-title">Tudo incluso para você começar</h2>
    </div>

    <div class="features-grid">
      {mainFeatures.map((feature, index) => (
        <div class="feature-card" style={`--delay: ${index * 0.1}s`}>
          <div class="feature-icon">
            {feature.icon === "clock" && (
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
            )}
            {feature.icon === "users" && (
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
            )}
            {feature.icon === "kit" && (
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
                <line x1="12" y1="22.08" x2="12" y2="12"/>
              </svg>
            )}
            {feature.icon === "certificate" && (
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="8" r="7"/>
                <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"/>
              </svg>
            )}
            {feature.icon === "community" && (
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
              </svg>
            )}
            {feature.icon === "live" && (
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <polygon points="23 7 16 12 23 17 23 7"/>
                <rect x="1" y="5" width="15" height="14" rx="2"/>
              </svg>
            )}
          </div>
          <div class="feature-content">
            <h3 class="feature-title">{feature.title}</h3>
            <p class="feature-description">{feature.description}</p>
          </div>
          <div class="feature-check">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
              <polyline points="20 6 9 17 4 12"/>
            </svg>
          </div>
        </div>
      ))}
    </div>

    <!-- Bonuses -->
    <div class="bonuses-section">
      <div class="bonuses-header">
        <span class="bonus-label">Bônus exclusivos</span>
        <h3 class="bonus-title">E você ainda leva de presente:</h3>
      </div>

      <div class="bonuses-grid">
        {bonuses.map((bonus, index) => (
          <div class="bonus-card" style={`--delay: ${index * 0.15}s`}>
            <div class="bonus-badge">GRÁTIS</div>
            <div class="bonus-content">
              <span class="bonus-value">Valor: <s>{bonus.value}</s></span>
              <h4 class="bonus-name">{bonus.title}</h4>
              <p class="bonus-description">{bonus.description}</p>
            </div>
            <div class="bonus-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <polyline points="20 12 20 22 4 22 4 12"/>
                <rect x="2" y="7" width="20" height="5"/>
                <line x1="12" y1="22" x2="12" y2="7"/>
                <path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"/>
                <path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"/>
              </svg>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .included-section {
    background: var(--black);
    position: relative;
  }

  .included-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--gold);
    margin-bottom: 1rem;
  }

  .included-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    text-transform: uppercase;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 5rem;
  }

  .feature-card {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    position: relative;
    opacity: 0;
    transform: translateY(10px);
    animation: fadeInUp 0.5s ease-out var(--delay) forwards;
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    background: rgba(34, 197, 94, 0.05);
    border-color: rgba(34, 197, 94, 0.2);
  }

  .feature-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(201, 169, 98, 0.1);
    border-radius: 12px;
    color: var(--gold);
  }

  .feature-icon svg {
    width: 24px;
    height: 24px;
  }

  .feature-content {
    flex: 1;
  }

  .feature-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--white);
  }

  .feature-description {
    font-size: 0.875rem;
    color: var(--white-dim);
    line-height: 1.5;
  }

  .feature-check {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--green);
  }

  .feature-check svg {
    width: 16px;
    height: 16px;
  }

  /* Bonuses */
  .bonuses-section {
    position: relative;
    padding-top: 3rem;
  }

  .bonuses-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--gold), transparent);
  }

  .bonuses-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .bonus-label {
    display: inline-block;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--green);
    margin-bottom: 0.5rem;
  }

  .bonus-title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    text-transform: uppercase;
    color: var(--white);
  }

  .bonuses-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .bonus-card {
    position: relative;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(201, 169, 98, 0.1) 0%, rgba(201, 169, 98, 0.02) 100%);
    border: 1px solid rgba(201, 169, 98, 0.3);
    border-radius: 16px;
    overflow: hidden;
    opacity: 0;
    transform: scale(0.95);
    animation: scaleIn 0.5s ease-out var(--delay) forwards;
  }

  @keyframes scaleIn {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .bonus-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 0.25rem 0.75rem;
    background: var(--green);
    color: var(--white);
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    border-radius: 4px;
  }

  .bonus-content {
    position: relative;
    z-index: 1;
  }

  .bonus-value {
    display: block;
    font-size: 0.8rem;
    color: var(--white-dim);
    margin-bottom: 0.5rem;
  }

  .bonus-value s {
    color: var(--red);
  }

  .bonus-name {
    font-family: var(--font-display);
    font-size: 1.25rem;
    text-transform: uppercase;
    color: var(--gold);
    margin-bottom: 0.5rem;
  }

  .bonus-description {
    font-size: 0.9rem;
    color: var(--white-dim);
  }

  .bonus-icon {
    position: absolute;
    bottom: -10px;
    right: -10px;
    width: 80px;
    height: 80px;
    color: var(--gold);
    opacity: 0.1;
  }

  .bonus-icon svg {
    width: 100%;
    height: 100%;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: 1fr;
    }

    .bonuses-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .feature-card {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }

    .feature-check {
      position: absolute;
      top: 1rem;
      right: 1rem;
    }
  }
</style>

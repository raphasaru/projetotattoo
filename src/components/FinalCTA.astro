<style>
  .final-cta-section {
    position: relative;
    padding: clamp(5rem, 12vw, 10rem) 0;
    overflow: hidden;
  }

  /* Background */
  .cta-background {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--black) 0%, #0d1a0d 50%, var(--black) 100%);
  }

  .ink-splash-1 {
    position: absolute;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(34, 197, 94, 0.15) 0%, transparent 60%);
    top: -200px;
    right: -200px;
    filter: blur(80px);
    animation: float 10s ease-in-out infinite;
  }

  .ink-splash-2 {
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(201, 169, 98, 0.1) 0%, transparent 60%);
    bottom: -150px;
    left: -150px;
    filter: blur(80px);
    animation: float 8s ease-in-out infinite reverse;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(20px, -20px); }
  }

  .grid-overlay {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(34, 197, 94, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(34, 197, 94, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  /* Content */
  .cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .urgency-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 100px;
    color: var(--red);
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 2rem;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.4); }
    50% { box-shadow: 0 0 0 10px rgba(239, 68, 68, 0); }
  }

  .pulse-dot {
    width: 10px;
    height: 10px;
    background: var(--red);
    border-radius: 50%;
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }

  .cta-headline {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 4rem);
    line-height: 1.1;
    text-transform: uppercase;
    margin-bottom: 1.5rem;
  }

  .highlight {
    color: var(--green);
    display: block;
  }

  .cta-subtext {
    font-size: 1.1rem;
    color: var(--white-dim);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .cta-subtext strong {
    color: var(--white);
  }

  /* Features */
  .cta-features {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2.5rem;
    flex-wrap: wrap;
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--white-dim);
    font-size: 0.9rem;
  }

  .feature svg {
    width: 20px;
    height: 20px;
    color: var(--green);
  }

  /* Main CTA Button */
  .cta-button-main {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1.5rem 3rem;
    background: linear-gradient(135deg, var(--green) 0%, #16a34a 100%);
    color: var(--white);
    font-weight: 700;
    font-size: 1.1rem;
    border-radius: 12px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(34, 197, 94, 0.3);
  }

  .cta-button-main::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s ease;
  }

  .cta-button-main:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 50px rgba(34, 197, 94, 0.4);
  }

  .cta-button-main:hover::before {
    left: 100%;
  }

  .whatsapp-icon {
    width: 24px;
    height: 24px;
  }

  .arrow-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .cta-button-main:hover .arrow-icon {
    transform: translateX(4px);
  }

  .cta-note {
    margin-top: 1.5rem;
    font-size: 0.85rem;
    color: var(--white-dim);
    opacity: 0.7;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cta-features {
      gap: 1rem;
    }

    .feature {
      font-size: 0.8rem;
    }

    .cta-button-main {
      width: 100%;
      padding: 1.25rem 2rem;
    }
  }

  @media (max-width: 480px) {
    .cta-features {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>

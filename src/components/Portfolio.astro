---
const portfolioItems = [
  { src: "/images/galeria-alunos1.webp", alt: "Trabalho de aluno 1" },
  { src: "/images/galeria-alunos2.webp", alt: "Trabalho de aluno 2" },
  { src: "/images/galeria-alunos3.webp", alt: "Trabalho de aluno 3" },
  { src: "/images/galeria-alunos4.webp", alt: "Trabalho de aluno 4" },
  { src: "/images/galeria-alunos5.webp", alt: "Trabalho de aluno 5" },
  { src: "/images/galeria-alunos6.webp", alt: "Trabalho de aluno 6" },
  { src: "/images/galeria-alunos7.webp", alt: "Trabalho de aluno 7" },
  { src: "/images/galeria-alunos8.webp", alt: "Trabalho de aluno 8" },
  { src: "/images/galeria-alunos9.webp", alt: "Trabalho de aluno 9" },
  { src: "/images/galeria-alunos10.webp", alt: "Trabalho de aluno 10" },
  { src: "/images/galeria-alunos11.webp", alt: "Trabalho de aluno 11" },
  { src: "/images/galeria-alunos12.webp", alt: "Trabalho de aluno 12" },
];
---

<section class="portfolio-section section">
  <div class="container">
    <div class="portfolio-header">
      <span class="section-label">Galeria de alunos</span>
      <h2 class="portfolio-title">
        Trabalhos de quem começou do zero<br/>
        <span class="gold">— assim como você</span>
      </h2>
      <p class="portfolio-subtitle">Estes são trabalhos reais de alunos do Projeto Tattoo. Nenhum deles sabia tatuar antes de entrar aqui.</p>
    </div>

    <div class="portfolio-grid">
      {portfolioItems.map((item, index) => {
        const needsRotation = [3, 6, 7, 8].includes(index);
        return (
          <div class="portfolio-item" style={`--delay: ${(index % 6) * 0.1}s`}>
            <img
              src={item.src}
              alt={item.alt}
              class={`item-image ${needsRotation ? 'rotated' : ''}`}
              loading="lazy"
              decoding="async"
            />
            <div class="item-overlay"></div>
          </div>
        );
      })}
    </div>

  </div>

  <div class="ink-blob ink-blob-1"></div>
  <div class="ink-blob ink-blob-2"></div>
</section>

<!-- Lightbox -->
<div class="lightbox" id="lightbox" role="dialog" aria-modal="true">
  <button class="lightbox-close" aria-label="Fechar">×</button>
  <button class="lightbox-prev" aria-label="Anterior">‹</button>
  <button class="lightbox-next" aria-label="Próxima">›</button>

  <div class="lightbox-content">
    <img class="lightbox-image" src="" alt="" />
  </div>

  <div class="lightbox-counter">
    <span class="counter-current">1</span> / <span class="counter-total">12</span>
  </div>
</div>

<style>
  .portfolio-section {
    background: var(--black);
    position: relative;
    overflow: hidden;
  }

  .portfolio-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--gold);
    margin-bottom: 1rem;
  }

  .portfolio-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    text-transform: uppercase;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .gold {
    color: var(--gold);
  }

  .portfolio-subtitle {
    color: var(--white-dim);
    font-size: 1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Grid */
  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.75rem;
    margin-bottom: 3rem;
  }

  .portfolio-item {
    position: relative;
    aspect-ratio: 1;
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
    opacity: 0;
    transform: scale(0.95);
    animation: scaleIn 0.5s ease-out var(--delay) forwards;
  }

  @keyframes scaleIn {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .item-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    transition: transform 0.5s ease;
  }

  .item-image.rotated {
    transform: rotate(90deg);
  }

  .portfolio-item:hover .item-image {
    transform: scale(1.1);
  }

  .portfolio-item:hover .item-image.rotated {
    transform: rotate(90deg) scale(1.1);
  }

  .item-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.4) 0%, transparent 40%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .portfolio-item:hover .item-overlay {
    opacity: 1;
  }

  /* Footer */
  .portfolio-footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .footer-note {
    font-size: 0.9rem;
    color: var(--white-dim);
  }

  .instagram-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border: 1px solid rgba(201, 169, 98, 0.3);
    border-radius: 100px;
    color: var(--gold);
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .instagram-link:hover {
    background: rgba(201, 169, 98, 0.1);
    border-color: var(--gold);
  }

  .instagram-link svg {
    width: 20px;
    height: 20px;
  }

  /* Decorative blobs */
  .ink-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    pointer-events: none;
  }

  .ink-blob-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(201, 169, 98, 0.1) 0%, transparent 70%);
    top: 10%;
    left: -10%;
  }

  .ink-blob-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(34, 197, 94, 0.08) 0%, transparent 70%);
    bottom: 10%;
    right: -5%;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .portfolio-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .portfolio-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .portfolio-grid {
      gap: 0.5rem;
    }
  }

  /* Lightbox */
  .lightbox {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .lightbox.active {
    opacity: 1;
    pointer-events: auto;
  }

  .lightbox-content {
    position: relative;
    max-width: 90vw;
    max-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lightbox-image {
    max-width: 100%;
    max-height: 90vh;
    object-fit: contain;
    border-radius: 8px;
  }

  .lightbox-image.rotated {
    transform: rotate(90deg);
  }

  .lightbox-close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    width: 48px;
    height: 48px;
    border: none;
    background: rgba(255, 255, 255, 0.1);
    color: var(--white);
    font-size: 2rem;
    line-height: 1;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .lightbox-close:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
  }

  .lightbox-prev,
  .lightbox-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 60px;
    height: 60px;
    border: none;
    background: rgba(255, 255, 255, 0.1);
    color: var(--white);
    font-size: 3rem;
    line-height: 1;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .lightbox-prev {
    left: 2rem;
  }

  .lightbox-next {
    right: 2rem;
  }

  .lightbox-prev:hover,
  .lightbox-next:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-50%) scale(1.1);
  }

  .lightbox-counter {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.7);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    color: var(--white);
    font-size: 0.9rem;
    z-index: 10;
  }

  @media (max-width: 768px) {
    .lightbox-prev,
    .lightbox-next {
      width: 48px;
      height: 48px;
      font-size: 2rem;
    }

    .lightbox-prev {
      left: 1rem;
    }

    .lightbox-next {
      right: 1rem;
    }

    .lightbox-close {
      top: 1rem;
      right: 1rem;
      width: 40px;
      height: 40px;
      font-size: 1.5rem;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
  const portfolioItems = [
    { src: "/images/galeria-alunos1.webp", alt: "Trabalho de aluno 1" },
    { src: "/images/galeria-alunos2.webp", alt: "Trabalho de aluno 2" },
    { src: "/images/galeria-alunos3.webp", alt: "Trabalho de aluno 3" },
    { src: "/images/galeria-alunos4.webp", alt: "Trabalho de aluno 4" },
    { src: "/images/galeria-alunos5.webp", alt: "Trabalho de aluno 5" },
    { src: "/images/galeria-alunos6.webp", alt: "Trabalho de aluno 6" },
    { src: "/images/galeria-alunos7.webp", alt: "Trabalho de aluno 7" },
    { src: "/images/galeria-alunos8.webp", alt: "Trabalho de aluno 8" },
    { src: "/images/galeria-alunos9.webp", alt: "Trabalho de aluno 9" },
    { src: "/images/galeria-alunos10.webp", alt: "Trabalho de aluno 10" },
    { src: "/images/galeria-alunos11.webp", alt: "Trabalho de aluno 11" },
    { src: "/images/galeria-alunos12.webp", alt: "Trabalho de aluno 12" },
  ];

  const rotatedIndices = [3, 6, 7, 8];
  let currentIndex = 0;

  const lightbox = document.getElementById('lightbox');
  const lightboxImage = lightbox.querySelector('.lightbox-image');
  const counterCurrent = lightbox.querySelector('.counter-current');
  const counterTotal = lightbox.querySelector('.counter-total');
  const closeBtn = lightbox.querySelector('.lightbox-close');
  const prevBtn = lightbox.querySelector('.lightbox-prev');
  const nextBtn = lightbox.querySelector('.lightbox-next');

  counterTotal.textContent = portfolioItems.length;

  function updateImage() {
    const item = portfolioItems[currentIndex];
    lightboxImage.src = item.src;
    lightboxImage.alt = item.alt;
    counterCurrent.textContent = currentIndex + 1;

    if (rotatedIndices.includes(currentIndex)) {
      lightboxImage.classList.add('rotated');
    } else {
      lightboxImage.classList.remove('rotated');
    }
  }

  function openLightbox(index) {
    currentIndex = index;
    updateImage();
    lightbox.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeLightbox() {
    lightbox.classList.remove('active');
    document.body.style.overflow = '';
  }

  function navigate(direction) {
    currentIndex = (currentIndex + direction + portfolioItems.length) % portfolioItems.length;
    updateImage();
  }

  // Event listeners
  document.querySelectorAll('.portfolio-item').forEach((item, index) => {
    item.addEventListener('click', () => openLightbox(index));
  });

  closeBtn.addEventListener('click', closeLightbox);
  prevBtn.addEventListener('click', () => navigate(-1));
  nextBtn.addEventListener('click', () => navigate(1));

  lightbox.addEventListener('click', (e) => {
    if (e.target === lightbox) {
      closeLightbox();
    }
  });

  document.addEventListener('keydown', (e) => {
    if (!lightbox.classList.contains('active')) return;

    if (e.key === 'Escape') {
      closeLightbox();
    } else if (e.key === 'ArrowLeft') {
      navigate(-1);
    } else if (e.key === 'ArrowRight') {
      navigate(1);
    }
  });
  });
</script>

---
// Placeholder images - replace with actual student work
const portfolioItems = [
  { style: "Fine Line", category: "Minimalista" },
  { style: "Blackwork", category: "Geométrico" },
  { style: "Realismo", category: "Retrato" },
  { style: "Old School", category: "Tradicional" },
  { style: "Aquarela", category: "Colorido" },
  { style: "Pontilhismo", category: "Dotwork" },
  { style: "Lettering", category: "Escrita" },
  { style: "Tribal", category: "Maori" },
  { style: "Floral", category: "Botânico" },
  { style: "Sketch", category: "Rascunho" },
  { style: "Oriental", category: "Japonês" },
  { style: "Geométrico", category: "Abstrato" }
];
---

<section class="portfolio-section section">
  <div class="container">
    <div class="portfolio-header">
      <span class="section-label">Portfolio de alunos</span>
      <h2 class="portfolio-title">
        Trabalhos de quem começou do zero<br/>
        <span class="gold">— assim como você</span>
      </h2>
      <p class="portfolio-subtitle">Estes são trabalhos reais de alunos do Projeto Tattoo. Nenhum deles sabia tatuar antes de entrar aqui.</p>
    </div>

    <div class="portfolio-grid">
      {portfolioItems.map((item, index) => (
        <div class="portfolio-item" style={`--delay: ${(index % 6) * 0.1}s; --hue: ${index * 30}`}>
          <div class="item-image">
            <!-- Placeholder pattern - replace with actual images -->
            <div class="placeholder-pattern">
              <svg viewBox="0 0 100 100" preserveAspectRatio="none">
                <defs>
                  <pattern id={`pattern-${index}`} x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                    <circle cx="10" cy="10" r="1.5" fill="currentColor" opacity="0.3"/>
                  </pattern>
                </defs>
                <rect width="100" height="100" fill={`url(#pattern-${index})`}/>
              </svg>
              <div class="placeholder-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <rect x="3" y="3" width="18" height="18" rx="2"/>
                  <circle cx="8.5" cy="8.5" r="1.5"/>
                  <path d="M21 15l-5-5L5 21"/>
                </svg>
              </div>
            </div>
          </div>
          <div class="item-overlay">
            <span class="item-style">{item.style}</span>
            <span class="item-category">{item.category}</span>
          </div>
        </div>
      ))}
    </div>

    <div class="portfolio-footer">
      <p class="footer-note">Veja mais trabalhos no nosso Instagram</p>
      <a href="https://instagram.com/projetotattoo" target="_blank" rel="noopener" class="instagram-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <rect x="2" y="2" width="20" height="20" rx="5"/>
          <circle cx="12" cy="12" r="4"/>
          <circle cx="18" cy="6" r="1" fill="currentColor"/>
        </svg>
        <span>@projetotattoo</span>
      </a>
    </div>
  </div>

  <!-- Decorative elements -->
  <div class="ink-blob ink-blob-1"></div>
  <div class="ink-blob ink-blob-2"></div>
</section>

<style>
  .portfolio-section {
    background: var(--black);
    position: relative;
    overflow: hidden;
  }

  .portfolio-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--gold);
    margin-bottom: 1rem;
  }

  .portfolio-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    text-transform: uppercase;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .gold {
    color: var(--gold);
  }

  .portfolio-subtitle {
    color: var(--white-dim);
    font-size: 1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Grid */
  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .portfolio-item {
    position: relative;
    aspect-ratio: 1;
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
    opacity: 0;
    transform: scale(0.95);
    animation: scaleIn 0.5s ease-out var(--delay) forwards;
  }

  @keyframes scaleIn {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .item-image {
    width: 100%;
    height: 100%;
    background: var(--black-lighter);
    transition: transform 0.5s ease;
  }

  .portfolio-item:hover .item-image {
    transform: scale(1.1);
  }

  .placeholder-pattern {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gold);
    position: relative;
  }

  .placeholder-pattern svg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .placeholder-icon {
    position: relative;
    z-index: 1;
    width: 40px;
    height: 40px;
    opacity: 0.3;
  }

  .placeholder-icon svg {
    width: 100%;
    height: 100%;
  }

  .item-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, transparent 50%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .portfolio-item:hover .item-overlay {
    opacity: 1;
  }

  .item-style {
    font-family: var(--font-display);
    font-size: 1.25rem;
    text-transform: uppercase;
    color: var(--white);
  }

  .item-category {
    font-size: 0.75rem;
    color: var(--gold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Footer */
  .portfolio-footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .footer-note {
    font-size: 0.9rem;
    color: var(--white-dim);
  }

  .instagram-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border: 1px solid rgba(201, 169, 98, 0.3);
    border-radius: 100px;
    color: var(--gold);
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .instagram-link:hover {
    background: rgba(201, 169, 98, 0.1);
    border-color: var(--gold);
  }

  .instagram-link svg {
    width: 20px;
    height: 20px;
  }

  /* Decorative blobs */
  .ink-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    pointer-events: none;
  }

  .ink-blob-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(201, 169, 98, 0.1) 0%, transparent 70%);
    top: 10%;
    left: -10%;
  }

  .ink-blob-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(34, 197, 94, 0.08) 0%, transparent 70%);
    bottom: 10%;
    right: -5%;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .portfolio-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .portfolio-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .portfolio-grid {
      gap: 0.5rem;
    }
  }
</style>

---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import PainPoints from '../components/PainPoints.astro';
import Transformation from '../components/Transformation.astro';
import SocialProof from '../components/SocialProof.astro';
import Method from '../components/Method.astro';
import Testimonials from '../components/Testimonials.astro';
import Portfolio from '../components/Portfolio.astro';
import Investment from '../components/Investment.astro';
import Included from '../components/Included.astro';
import Objections from '../components/Objections.astro';
import FAQ from '../components/FAQ.astro';
import FinalCTAVisita from '../components/FinalCTAVisita.astro';

const ctaHref = "#agendar";
---

<Layout title="Visite a Escola de Tatuagem | Conheça o Projeto Tattoo em Santana">
  <main>
    <Hero ctaHref={ctaHref} ctaText="Agendar minha visita à escola" ctaExternal={false} />
    <PainPoints />
    <Transformation ctaHref={ctaHref} />
    <SocialProof />
    <Method ctaHref={ctaHref} />
    <Testimonials />
    <Portfolio />
    <Investment ctaHref={ctaHref} />
    <Included />
    <Objections />
    <FAQ />
    <FinalCTAVisita />
  </main>

  <footer class="footer">
    <div class="footer-container">
      <div class="footer-brand">
        <img src="/images/projeto-tattoo-logo-dourado.webp" alt="Projeto Tattoo" class="footer-logo" width="160" height="160" />
        <span class="brand-tagline">12 anos formando tatuadores profissionais</span>
      </div>

      <div class="footer-links">
        <a href="https://instagram.com/projetotattoo" target="_blank" rel="noopener" class="social-link">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="2" y="2" width="20" height="20" rx="5"/>
            <circle cx="12" cy="12" r="4"/>
            <circle cx="18" cy="6" r="1" fill="currentColor"/>
          </svg>
          <span>Instagram</span>
        </a>
        <a href="https://youtube.com/@projetotattoo" target="_blank" rel="noopener" class="social-link">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="2" y="4" width="20" height="16" rx="2"/>
            <polygon points="10 8 16 12 10 16 10 8" fill="currentColor"/>
          </svg>
          <span>YouTube</span>
        </a>
      </div>

      <div class="footer-legal">
        <p>&copy; {new Date().getFullYear()} Projeto Tattoo. Todos os direitos reservados.</p>
      </div>
    </div>
  </footer>
</Layout>

<style>
  main {
    overflow-x: hidden;
  }

  .footer {
    background: var(--black);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    padding: 3rem 0;
  }

  .footer-container {
    width: min(90%, 1200px);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    text-align: center;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .footer-logo {
    width: 160px;
    height: auto;
  }

  .brand-tagline {
    font-size: 0.85rem;
    color: var(--white-dim);
  }

  .footer-links {
    display: flex;
    gap: 2rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--white-dim);
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .social-link:hover {
    color: var(--gold);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  .footer-legal {
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    width: 100%;
  }

  .footer-legal p {
    font-size: 0.8rem;
    color: var(--white-dim);
    opacity: 0.5;
  }
</style>
